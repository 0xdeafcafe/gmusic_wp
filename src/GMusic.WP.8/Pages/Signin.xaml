			<TextBlock Text="Welcome to Google Music" Grid.Column="1" Margin="9,0,0,0" Style="{StaticResource PhoneTextTitle1Style}" Foreground="#FF808285" FontSize="36"/>
			<TextBlock Text="Sign in" Grid.Column="1" Margin="9,0,0,0" Style="{StaticResource PhoneTextTitle1Style}" Foreground="#FF808285" FontSize="48"/>
		</StackPanel>

		<!--ContentPanel - place additional content here-->
		<StackPanel Grid.Row="1" Margin="12,0,12,0">
			<TextBlock Text="Google Play Email:" Foreground="#FF808285" 
					   Margin="30,20,30,0"/>
			<TextBox x:Name="txtEmail" Text="xeraxical@gmail.com" 
					 Margin="30,0,30,0" Height="72"/>

			<TextBlock Text="Password:" Foreground="#FF808285" 
					   Margin="30,20,30,0"/>
			<PasswordBox x:Name="txtPass"
					 Margin="30,0,30,0"/>

			<Button x:Name="btnSignIn" Content="Sign In" Margin="30,30,30,0" Style="{StaticResource ActionButton-LargeOrangina}" Height="90" Click="btnSignIn_Click" />
		</StackPanel>

